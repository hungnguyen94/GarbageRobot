<robot name="body" xmlns:xacro="http://ros.org/wiki/xacro"
  xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor">
  <link name="body">
    <inertial>
      <origin xyz="0 0.27093 0.68573" rpy="0 0 0" />
      <mass value="9.21868409" />
      <inertia ixx="0.6" ixy="0" ixz="0" iyy="0.6" iyz="0" izz="0.24" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://oscar_description/meshes/body.STL" />
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://oscar_description/meshes/body.STL" />
      </geometry>
    </collision>
  </link>

  <xacro:property name="camera_name" value="kinect" />
  <xacro:property name="frame_name" value="kinect_link" />
  <xacro:property name="link_name" value="kinect_link" />
  <xacro:property name="pi" value="3.1415926535897931" />
  <xacro:property name="kinect_roll" value="${0.5 * pi}" />
  <xacro:property name="kinect_pitch" value="${0.5 * pi}" />

  <link name="kinect_link">
    <!-- <pose>0 0 0.05 0 0 0</pose> -->
    <inertial>
      <mass value="0.1" />
      <inertia ixx="0.000166667" ixy="0" ixz="0" iyy="0.000166667" iyz="0" izz="0.000166667" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <!-- <origin xyz="0 -0.1 0.72" rpy="${kinect_roll} ${kinect_pitch} 0" /> -->
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <!-- <origin xyz="0 -0.1 0.72" rpy="${kinect_roll} ${kinect_pitch} 0" /> -->
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
  </link>
  <joint name="kinect_joint" type="fixed">
    <origin xyz="0 -1 1" rpy="0 0 ${-0.5*pi}" />

    <!-- <origin xyz="0 -0.1 0.72" rpy="${kinect_roll} ${kinect_pitch} 0" /> -->
    <parent link="body" />
    <child link="kinect_link" />
  </joint>
