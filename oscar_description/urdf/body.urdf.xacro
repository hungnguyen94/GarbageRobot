  <xacro:property name="name" value="first" />
  <xacro:property name="fov" value="${15/360 * 2 * pi}" />
  <xacro:property name="update_rate" value="300" />
  <xacro:property name="minRange" value="0.02" />
  <xacro:property name="maxRange" value="4" />
  <xacro:property name="ros_topic" value="/test" />

  <link name="${name}_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.001" />
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.0001" />
      </inertial>
    </link>

    <joint name="${name}_joint" type="fixed">
      <origin xyz="0 -0.5 1"/>
      <parent link="body"/>
      <child link="${name}_link"/>
</joint>

<gazebo reference="${name}_link">
  <sensor type="ray" name="${name}">
    <pose>0 0 0 0 0 0</pose>
    <update_rate>${update_rate}</update_rate>
    <visualize>false</visualize>
    <ray>
      <scan>
        <horizontal>
          <samples>5</samples>
          <resolution>1</resolution>
          <min_angle>-${fov/2}</min_angle>
          <max_angle>${fov/2}</max_angle>
        </horizontal>
        <vertical>
          <samples>5</samples>
          <resolution>1</resolution>
          <min_angle>-${fov/2}</min_angle>
          <max_angle>${fov/2}</max_angle>
        </vertical>
      </scan>
      <range>
        <min>${minRange}</min>
        <max>${maxRange}</max>
        <resolution>0.01</resolution>
      </range>
    </ray>
    <plugin filename="libgazebo_ros_range.so" name="gazebo_ros_range">
      <gaussianNoise>0.005</gaussianNoise>
      <alwaysOn>true</alwaysOn>
      <updateRate>${update_rate}</updateRate>
      <topicName>${ros_topic}</topicName>
      <frameName>${name}_link</frameName>
      <fov>${fov}</fov>
      <radiation>ultrasound</radiation>
    </plugin>
  </sensor>
</gazebo>




